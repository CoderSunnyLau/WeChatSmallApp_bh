.searchBar {
  display: flex;
  background-color: #f50;
  color: #fff;
  justify-content: center;
  padding-bottom: 16rpx;
}

.searchBar .search-scan {
  width: 72rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
}

.searchBar .scan-img {
  width: 45rpx;
  height: 40rpx;
  margin-bottom: 5rpx;
}

.searchBar .search-area {
  display: flex;
  margin-left: 15rpx;
  position: relative;
  align-items: center;
}

.searchBar .search-input {
  width: 460rpx;
  padding: 8rpx 0rpx 8rpx 60rpx;
  border-radius: 5px;
  background: #fff;
  color: #3e3a39;
}

.searchBar .search-img {
  position: absolute;
  top: 20%;
  left: 12rpx;
  width: 40rpx;
  height: 40rpx;
}

.searchBar .search-btn {
  font-size: 32rpx;
  margin-left: 12rpx;
	width: auto;
	padding: 0;
}
.searchBar .search-btn::after{
	content: none;
}

.holderTxt {
  font-size: 24rpx;
}
