/**index.wxss**/
page{
  background-color: #FFF;
}
.login{
  width: 562rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #555;
}
.logo_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx auto 70rpx;
}
.logo{
  width: 320rpx;
}
.input_field{
  height: 90rpx;
  width: 100%;
  margin: 20rpx auto;
  position: relative;
  border-bottom: 2rpx solid #888;
  background-position-x: 5rpx;
}
.tip{
  font-size: 24rpx;
  text-align: center;
  height: 30rpx;
}
.pwd{
  background-position: 8rpx -72rpx;
}
.input{
  float: left;
  width: 390rpx;
  margin: 15rpx 0 0 70rpx;
  border: none;
  height: 70rpx;
  line-height: 20rpx;
  font-size: 34rpx;
}
.btn{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  margin: 36rpx 0;
}
.forget_box{
  color: #333;
  overflow: hidden;
}
.forget{
	float: right;
}
.version_box{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 100%;
  text-align: center;
}
.version{
  font-size: 22rpx;
  color: #BBB;
}
.clear{
	display: none; 
	font-size: 40rpx;
	color: #AAA;
	position: absolute;
	padding: 10rpx;
	right: 0;
	bottom: 10rpx;
}
.show{
	display: block;
}