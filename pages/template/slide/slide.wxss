page {
  background-color: #f3f5f7;
}

.pageTab {
  display: flex;
  background-color: #fff;
  height: 65rpx;
}

.pageTab .tabItem {
  font-size: 30rpx;
  line-height: 65rpx;
  flex: 1;
  text-align: center;
}

.pageTab .screen {
  background-position: 182% 99.3%;
}

.pageTab .curr {
  color: #ff5001;
  border-bottom: 4rpx solid #ff5001;
}

.screen_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;
  z-index: 1;
}

.facets_content {
  position: fixed;
  top: 0;
  right: 0;
  width: 87.5%;
  height: 100%;
  background-color: #fff;
  z-index: 2;
}

.facets_content .select_box {
  display: flex;
  justify-content: space-between;
}

.facets_content .item {
  padding: 24rpx 5%;
  border-bottom: 1px solid #c7c7c7;
}

.facets_content .item:last-child {
  border-bottom: none;
}

.facets_content .title {
  font-size: 32rpx;
}

.facets_content .select_box .select_content {
  color: #727272;
}

.facets_content .facets_item .facets_child {
  border: 1px solid #a6a6a6;
  padding: 10rpx 30rpx;
  text-align: center;
  width: 30%;
  box-sizing: border-box;
  margin-right: 5%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.facets_content .facets_item .facets_child:nth-child(3n) {
  margin-right: 0;
}

.facets_content .facets_item .facets_list {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.nav {
  display: flex;
}

.nav-left .nav-item {
  width: 185rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #efefef;
  text-align: center;
  margin-bottom: 1px;
  font-size: 30rpx;
  background-color: #fff;
  color: #444;
}

.nav .nav-left .curr {
  background-color: #f3f5f7;
  /* border-bottom: 4rpx solid #ff560a; */
  margin-bottom: 0;
  color: #f50;
}

.nav-right {
  padding: 0 20rpx;
}

.nav-right .nav-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #3e3a39;
}

.nav-right .nav-content {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
}

.nav-right .nav-item {
  width: 33.3%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #727272;
  box-sizing: border-box;
  border-right: 1px solid #f3f5f7;
  border-bottom: 1px solid #f3f5f7;
  padding: 0 10rpx;
}

.top {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  background-color: #fff;
  width: 80rpx;
  height: 80rpx;
  color: #444;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
	box-shadow: -2px 2px 9px 1px #eee;
}

.top image {
  width: 70%;
  height: 70%;
}

.sku_box {
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
}
