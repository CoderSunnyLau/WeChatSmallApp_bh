page {
  background-color: #f3f5f7;
}

#bar::test_txt {
  color: yellow;
}

.pageTab {
  display: flex;
  background-color: #fff;
  height: 65rpx;
}

.pageTab .tabItem {
  font-size: 30rpx;
  line-height: 65rpx;
  flex: 1;
  text-align: center;
}

.pageTab .screen {
  background-position: 182% 99.3%;
}

.pageTab .curr {
  color: #ff5001;
  border-bottom: 4rpx solid #ff5001;
}

.screen_bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  top: 0;
  z-index: 1;
}

.facets_content {
  position: fixed;
  top: 0;
  right: 0;
  width: 87.5%;
  height: 100%;
  background-color: #fff;
  z-index: 2;
}

.facets_content .select_box {
  display: flex;
  justify-content: space-between;
}

.facets_content .item {
  padding: 24rpx 5%;
  border-bottom: 1px solid #c7c7c7;
}

.facets_content .item:last-child {
  border-bottom: none;
}

.facets_content .title {
  font-size: 32rpx;
}

.facets_content .select_box .select_content {
  color: #727272;
}

.facets_content .facets_item .facets_child {
  border: 1px solid #a6a6a6;
  padding: 10rpx 30rpx;
  text-align: center;
  width: 30%;
  box-sizing: border-box;
  margin-right: 5%;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.facets_content .facets_item .facets_child:nth-child(3n) {
  margin-right: 0;
}

.facets_content .facets_item .facets_list {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.nav {
  display: flex;
}

.nav-left .nav-item {
  width: 185rpx;
  height: 100rpx;
  line-height: 100rpx;
  background: #efefef;
  text-align: center;
  margin-bottom: 1px;
  font-size: 30rpx;
  background-color: #fff;
  color: #444;
}

.nav .nav-left .curr {
  background-color: #f3f5f7;
  /* border-bottom: 4rpx solid #ff560a; */
  margin-bottom: 0;
  color: #f50;
}

.nav-right {
  padding: 0 20rpx;
}

.nav-right .nav-title {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  font-weight: 700;
  color: #3e3a39;
}

.nav-right .nav-content {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
}

.nav-right .nav-item {
  width: 33.3%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  text-align: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 28rpx;
  color: #727272;
  box-sizing: border-box;
  border-right: 1px solid #f3f5f7;
  border-bottom: 1px solid #f3f5f7;
  padding: 0 10rpx;
}

.top {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx;
  background-color: #fff;
  width: 80rpx;
  height: 80rpx;
  color: #444;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: -2px 2px 9px 1px #eee;
}

.top image {
  width: 70%;
  height: 70%;
}

.buy_box {
  position: fixed;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
}

.buy_box .box_bg{
	height: 100%;
	width: 100%;
	background: rgba(0, 0, 0, 0.7);
}

.buy_box .buy_content {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 550rpx;
  background-color: #fff;
  z-index: 2;
  display: flex;
  flex-direction: column-reverse;
}

.img_area {
  position: absolute;
  /* padding: 6rpx; */
  top: -50rpx;
  left: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
  border: 1px solid #efefef;
  width: 105px;
  height: 105px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pro_img {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #ccc;
}

.btn_area {
  display: flex;
  width: 100%;
}

.btn_area button {
  width: 50%;
  border-radius: 0;
  height: 90rpx;
  line-height: 90rpx;
}

.btn_area button::after {
  border: 0;
}

.btn_area .cancel_btn {
  background-color: #ff9908;
}

.amount_area {
  justify-content: space-between;
  height: 90rpx;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #efefef;
}

.amount_area .amount_title {
  font-size: 30rpx;
}

.amount_area .amount_content {
  border: 1px solid #ccc;
}

.amount_area .amount_content text {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}

.amount_area .amount_content input {
  width: 100rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  text-align: center;
}

.sku_area {
  height: 150rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #efefef;
}

.sku_area .sku_title {
  font-size: 30rpx;
  margin-bottom: 15rpx;
}

.sku_area .sku_content text {
  padding: 10rpx 20rpx;
  /* border: 1px solid #949494; */
  border-radius: 20rpx;
  /* color: #676767; */
  margin-right: 40rpx;
	background-color:#efefef;
}

.msg_area {
  position: absolute;
  top: 10px;
  left: 280rpx;
  line-height: 50rpx;
}

.msg_area .msg_price {
  font-size: 32rpx;
  color: #f50;
  font-weight: 600;
}

.msg_area .msg_content .msg_stock {
  padding-right: 15rpx;
  font-size: 30rpx;
}

.close {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}

.close .close_img {
  width: 50rpx;
  height: 50rpx;
}

.flex_row {
  display: flex;
}

.flex_column {
  display: flex;
  flex-direction: column;
}
