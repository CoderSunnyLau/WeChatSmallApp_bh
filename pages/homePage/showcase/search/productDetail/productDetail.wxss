page {
  background-color: #efefef;
}

.img_content {
  height: 400rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.img_area {
  text-align: center;
}

.product_img {
  height: 100%;
}

.favorite {
  width: 70rpx;
  height: 70rpx;
  background-position: 13rpx -1585rpx;
  position: absolute;
  top: 2%;
  right: 2%;
}

.hasAdd {
  background-position: 13rpx -1655rpx;
}

.product_msg_area .area {
  display: flex;
  flex-direction: column;
  padding: 20rpx 35rpx;
  border-bottom: 1px solid #ddd;
  background-color: #fff;
}

.product_msg_area .msg {
  line-height: 48rpx;
  color: #717171;
}

.product_msg_area .msg .product_caption {
  color: #444;
}

.product_msg_area .buyAction .action_box {
  display: flex;
  border: 1px solid #6d6c6a;
  align-items: center;
  margin-bottom: 20rpx;
}

.product_msg_area .action_box input {
  width: 90%;
  text-align: center;
}

.product_msg_area .action_box view {
  padding: 0 10rpx;
  width: 5%;
  text-align: center;
  font-size: 40rpx;
}

.product_msg_area .action_box .reduce {
  border-right: 1px solid #c9cbca;
}

.product_msg_area .action_box .add {
  border-left: 1px solid #c9cbca;
}

.product_msg_area .buyAction button {
  width: 100%;
}

.product_msg_area .tip text {
  padding: 4rpx 12rpx;
  background-color: #fe2e46;
  color: #fff;
  border-radius: 18rpx;
  margin-right: 10rpx;
  font-size: 24rpx;
}

.product_msg_area .price {
  line-height: 48rpx;
}

.product_msg_area .price .product_price text:last-child {
  font-size: 36rpx;
}

.product_msg_area .skus{
	flex-direction: row;
	align-items: center;
}

.product_msg_area .skus .sku{
	padding: 2rpx 14rpx;
	border: 1px solid #ccc;
	margin-left: 10rpx;
}

.product_msg_area .skus .curr{
	border: 4rpx solid #ff5501;
}

.product_msg_area .store{
	margin-top: 20rpx;
}

.product_msg_area .groups, .product_msg_area .detail {
  padding: 0;
  margin-top: 20rpx;
}

.product_msg_area .groups .groups_title {
  display: flex;
  justify-content: space-between;
  padding: 14rpx 35rpx;
  border-bottom: 1px solid #b7b7b7;
}

.product_msg_area .groups .groups_content {
  padding: 10rpx 35rpx;
}

.product_msg_area .detail .detail_title {
  padding: 14rpx 35rpx;
  border-bottom: 1px solid #b7b7b7;
}

.product_msg_area .detail .detail_content {
  padding: 10rpx 35rpx;
  display: flex;
  flex-direction: column;
  line-height: 45rpx;
}
